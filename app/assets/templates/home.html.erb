<h1 class="lb fc">The Home View!</h1>
<ul>
    <li ng-repeat="thing in things" >
        {{thing}}
    </li>
</ul>
<div>
  <p><a ng-href="/room">Create room</a></p>

  <div>
    <form ng-submit="submit(user)">
      <input type="email" name="email" placeholder="alex@alex.alex" ng-model="user.email" value="blah@blah.com">
      <input type="string" placeholder="firstname" ng-model="user.first_name">
      <input type="string" placeholder="lastname" ng-model="user.last_name">
      <input type="password" placeholder="password" ng-model="user.password">
      <input type="submit">
    </form>
  </div>
</div>

<!-- <button action="/soundcloud/search">YooHoo</button> -->
<div ng-controller="SoundcloudCtrl">
  <form ng-submit="submit(search)">
    <input type="string" name="query" placeholder="Search for songs" ng-model="search.query" id="song_search_bar">
    <input type="submit">
  </form>
</div>

<div ng-controller="SoundcloudCtrl as sound">
  <ul id="query_song_list" class="bd-sm dsp-n wdt-l">
