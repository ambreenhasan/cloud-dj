<div id="new_room_form_div" class="dsp-n">
  <%= form_for :room, :html => {:method => :post}, :url => "/users/#{@user.id}/rooms", remote: true do |f| %>
      <%= f.text_field :name, :class => "bd-s p-l", :id => "text_field", :placeholder => "give your room a name" %>
      <%= f.text_area :description, :class => "bd-s p-l", :id => "text_area", :placeholder => "what's your room all about?" %>
      <div id="check_box">
        Make this room private: <%= check_box_tag :publicness %>
      </div>
      <div id="save_new_room_form_button">
        <%= f.submit :id => "submit" %>
      </div>

    <div id="hide_new_room_form_button" class="bd-sm br-s">
      <p>Cancel</p>
    </div>
  <% end %>
</div>

<div id="room_form_errors">
</div>